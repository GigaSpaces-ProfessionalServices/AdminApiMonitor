<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:os-core="http://www.openspaces.org/schema/core"
       xmlns:os-remoting="http://www.openspaces.org/schema/remoting"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
       http://www.openspaces.org/schema/core http://www.openspaces.org/schema/9.7/core/openspaces-core.xsd
       http://www.openspaces.org/schema/remoting http://www.openspaces.org/schema/9.7/remoting/openspaces-remoting.xsd">

    <context:annotation-config />

    <context:property-placeholder location="file:///${properties}" />


    <bean id="spaceMonitor" class="com.gigaspaces.sbp.metrics.AdminApiMonitorRunner" init-method="init">
        <property name="adminUser" value="${spaceMonitor.adminUser}" />
        <property name="adminPassword" value="${spaceMonitor.adminPassword}" />
        <property name="locators" value="${spaceMonitor.locators}" />
        <property name="groups" value="${spaceMonitor.lookupGroups}" />
    </bean>

    <bean id="averageCounter" class="com.gigaspaces.sbp.metrics.ExponentialMovingAverage">
        <property name="alpha" value="${stat.sample.alpha}" />
    </bean>

    <bean id="collectPeriodicMetricsTask" class="com.gigaspaces.sbp.metrics.CollectPeriodicMetricsVisitorTask" init-method="init" >
        <property name="adminMonitor" ref="spaceMonitor" />
        <property name="spaceName" value="${spaceMonitor.spaceName}" />
        <property name="csv" value="${csv_format}" />
        <property name="exponentialMovingAverage" ref="averageCounter" />
        <property name="period" value="${stat.periodic.sample.interval}" />
    </bean>

    <bean id="schedulerPeriodicTask" class="org.springframework.scheduling.timer.MethodInvokingTimerTaskFactoryBean">
        <property name="targetObject" ref="collectPeriodicMetricsTask" />
        <property name="targetMethod" value="collectMetrics" />
    </bean>

    <bean id="timerPeriodicTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
        <property name="timerTask" ref="schedulerPeriodicTask" />
        <property name="period" value="${stat.periodic.sample.interval}" />
        <property name="delay" value="${stat.periodic.sample.delay}" />
    </bean>

    <bean id="sendReportPeriodicTask" class="com.gigaspaces.sbp.metrics.ReportEmailMetricsTask" init-method="init" >
        <property name="adminMonitor" ref="spaceMonitor" />
        <property name="spaceName" value="${spaceMonitor.spaceName}" />
        <property name="csv" value="${csv_format}" />
        <property name="exponentialMovingAverage" ref="averageCounter" />
        <property name="period" value="${stat.periodic.sample.interval}" />
    </bean>

    <bean id="schedulerPeriodicReportTask" class="org.springframework.scheduling.timer.MethodInvokingTimerTaskFactoryBean">
        <property name="targetObject" ref="sendReportPeriodicTask" />
        <property name="targetMethod" value="reportMetrics" />
    </bean>

    <bean id="timerPeriodicReportTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
        <property name="timerTask" ref="schedulerPeriodicReportTask" />
        <property name="period" value="${email.periodic.sample.interval}" />
        <property name="delay" value="${email.periodic.sample.delay}" />
    </bean>

    <bean class="org.springframework.scheduling.timer.TimerFactoryBean">
        <property name="scheduledTimerTasks">
            <list>
                <ref local="timerPeriodicTask" />
                <ref local="timerPeriodicReportTask" />
            </list>
        </property>
    </bean>

</beans>